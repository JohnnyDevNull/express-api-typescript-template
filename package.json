{
  "name": "express-api-typescript-template",
  "version": "0.0.2",
  "description": "This is a template and test project for Node.js + Express.js + TypeOrm as a REST-Api tested with Jest",
  "main": "src/server.ts",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development nodemon ./src/server.ts",
    "prod": "cross-env NODE_ENV=production node ./dist/server.js",
    "test": "jest",
    "build": "tsc",
    "lint": "tslint \"src/**/*.ts\" -c \"./tslint.json\""
  },
  "author": "Philipp John (JPlace)",
  "license": "MIT",
  "bugs": "https://github.com/JohnnyDevNull/express-api-typescript-template/issues",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.5",
    "nodemailer": "^6.2.1",
    "reflect-metadata": "^0.1.13",
    "sanitize": "^2.1.0",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/method-override": "0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/mysql": "^2.15.6",
    "@types/node": "^10.14.9",
    "@types/nodemailer": "^6.2.0",
    "@types/supertest": "^2.0.7",
    "cross-env": "^5.2.0",
    "cross-os": "^1.3.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
