{
  "name": "express-api-typescript-template",
  "version": "0.0.2",
  "description": "This is a template and test project for Node.js + Express.js + TypeOrm as a REST-Api tested with Jest",
  "main": "src/server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./src/server.ts",
    "prod": "cross-env NODE_ENV=production node ./dist/server.js",
    "test": "jest",
    "build": "tsc",
    "lint": "tslint \"src/**/*.ts\" -c \"./tslint.json\""
  },
  "author": "Philipp John (JPlace)",
  "license": "MIT",
  "bugs": "https://github.com/JohnnyDevNull/express-api-typescript-template/issues",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "mysql2": "^1.6.1",
    "nodemailer": "^4.6.8",
    "reflect-metadata": "^0.1.12",
    "sanitize": "^2.1.0",
    "typeorm": "^0.2.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/method-override": "0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.9.1",
    "@types/nodemailer": "^4.6.2",
    "@types/supertest": "^2.0.5",
    "cross-env": "^5.2.0",
    "cross-os": "^1.3.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^6.2.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
